<UserControl x:Class="WorldCup_WPF.PlayerOnField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCup_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="100" MaxHeight="150" MaxWidth="150" d:DesignWidth="100">
    

    <Grid  Margin="0">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
           
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="shirt-icon.jpg" HorizontalAlignment="Center" VerticalAlignment="Bottom">
  
        </Image>
        <Label Name="lblplayerNumber"  FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Viewbox Grid.Row="1">
            <Label Name="lblplayerName" Content="" FontStretch="Medium" FontWeight="ExtraBold" HorizontalAlignment="Center" />
        </Viewbox>
        

    </Grid>
</UserControl>
